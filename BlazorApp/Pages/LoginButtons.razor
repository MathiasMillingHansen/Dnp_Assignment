@namespace Login
@using BlazorApp.Authentication
@inject NavigationManager NavMgr
@inject IAuthManager AuthManager

@code {

    private void Login()
    {
        NavMgr.NavigateTo("/Login");
    }

    private async Task Logout()
    {
        await AuthManager.LogoutAsync();
        NavMgr.NavigateTo("/");
    }

}

<AuthorizeView>
    <Authorized>
        <img class="icon" src="icons/Logout.png" @onclick="Logout"/>
    </Authorized>
    <NotAuthorized>
        <img class="icon" src="icons/Login.png" @onclick="Login"/>
    </NotAuthorized>
</AuthorizeView>